<h2><%= @barcore.name %></h2>

<h3>Available Recipes</h3>
<ul>
  <% @recipes.each do |recipe| %>
    <li><%= link_to recipe.name, barcore_recipe_path(@barcore, recipe) %></li>
  <% end %>
</ul>

<h3>Active Pumps</h3>
<ul>
  <% @barcore.pumps.each do |pump| %>
    <li><%= link_to '%d: %s' % [pump.pump_num, pump.base.name],
                    edit_pump_path(pump) %></li>
  <% end %>
  <li><i><%= link_to 'Add Pump', new_pump_path %></i></li>
</ul>

<h3>Queued Recipes</h3>
<ul>
  <% @barcore.queued_recipes.each do |recipe| %>
    <li><%= recipe.name %></li>
  <% end %>
</ul>
